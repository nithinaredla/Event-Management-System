generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  role     Role
  events   Event[]
  sessions Session[]
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  expires      DateTime
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String?
  dateTime    DateTime
  location    String
  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById String
  rsvps       RSVP[]
}

model RSVP {
  id        String   @id @default(uuid())
  attendeeName  String
  attendeeEmail String
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   String
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  STAFF
  OWNER
}